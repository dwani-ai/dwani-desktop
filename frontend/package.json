{
  "name": "dwani-desktop",
  "version": "0.0.2",
  "main": "main.js",
  "description": "dwani.ai - Discovery - Document Analytics",
  "homepage": "https://dwani.ai", 
  "author": {
    "name": "dwani.ai",
    "email": "contact@dwani.ai"          
  },
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.dwani.desktop.app",
    "productName": "dwani-desktop",
    "copyright": "Copyright Â© 2025 dwani.ai",
    "compression": "maximum",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "assets/",
      "!**/*.map",
      "!**/*.ts",
      "!package-lock.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon.png",
      "target": "nsis"
    },
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "linux": {
      "icon": "icon.png",
      "category": "Productivity",
      "maintainer": "contact@dwani.ai",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.0.0"
  }
}
